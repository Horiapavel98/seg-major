<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seg.major.controller.LoginController">
  <children>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
                  <MenuItem mnemonicParsing="false" text="Find my login details" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="184.0" prefWidth="268.0" VBox.vgrow="ALWAYS">
      <children>
            <TextField fx:id="username" layoutX="146.0" layoutY="28.0" />
            <Label layoutX="62.0" layoutY="32.0" text="Username" />
            <Label layoutX="64.0" layoutY="85.0" text="Password" />
            <Button fx:id="login_button" layoutX="249.0" layoutY="131.0" mnemonicParsing="false" onAction="#loginBtn" text="Login" />
            <Button fx:id="register_button" layoutX="75.0" layoutY="131.0" mnemonicParsing="false" onAction="#registerBtn" text="Register new staff member" />
            <PasswordField fx:id="password" layoutX="146.0" layoutY="81.0" />
      </children>
    </AnchorPane>
  </children>
</VBox>
