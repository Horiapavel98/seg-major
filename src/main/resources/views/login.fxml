<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seg.major.controller.LoginController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
                  <MenuItem mnemonicParsing="false" text="Find my login details" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="184.0" prefWidth="268.0" VBox.vgrow="ALWAYS">
      <children>
            <TextField fx:id="username" layoutX="146.0" layoutY="28.0" />
            <Label layoutX="62.0" layoutY="32.0" text="Username" />
            <Label layoutX="64.0" layoutY="85.0" text="Password" />
            <Button fx:id="login_button" layoutX="249.0" layoutY="131.0" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
            <PasswordField fx:id="password" layoutX="146.0" layoutY="81.0" />
            <Label fx:id="message" layoutX="36.0" layoutY="179.0" text="Your username or password is incorrect, please try again." textFill="#9e0f0f" visible="false">
               <font>
                  <Font size="12.0" />
               </font></Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
